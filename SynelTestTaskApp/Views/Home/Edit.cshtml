@{
}
<form method="post" asp-controller="home" asp-action="edit" >

    <div class="container" >
          <div class="row" >
               <input type="hidden" asp-for="Id" />
             <div class="col-8 pt-3">
             
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Payroll_Number"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Payroll_Number" />
                        <span class="text-danger" asp-validation-for="Payroll_Number"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Forenames"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Forenames" />
                        <span class="text-danger" asp-validation-for="Forenames"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Surname"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Surname" />
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Date_of_Birth"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Date_of_Birth" />
                        <span class="text-danger" asp-validation-for="Date_of_Birth"></span>
                    </div>
                </div> 
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Telephone"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Telephone" />
                        <span class="text-danger" asp-validation-for="Telephone"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Mobile"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Mobile" />
                        <span class="text-danger" asp-validation-for="Mobile"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                </div>     
                 <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Address_2"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Address_2" />
                        <span class="text-danger" asp-validation-for="Address_2"></span>
                    </div>
                </div>  
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Postcode"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Postcode" />
                        <span class="text-danger" asp-validation-for="Postcode"></span>
                    </div>
                </div>  
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EMail_Home"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="EMail_Home" />
                        <span class="text-danger" asp-validation-for="EMail_Home"></span>
                    </div>
                </div>  
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Start_Date"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Start_Date" />
                        <span class="text-danger" asp-validation-for="Start_Date"></span>
                    </div>
                </div>  
                <div class="form-group row">
                    <div class="col-sm-8" ></div>
                    <div class="col-sm-4 ">
                         <button type="submit" class="btn btn-primary float-right mx-2 ">Update</button>
                         <a asp-controller="home" asp-action="index" class="btn btn-info float-right">Cancel</a>
                    </div>
                </div>                
            </div>
          </div>
    </div>
</form>