@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="border backgroundWhite container-fluid m-1">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Employees list</h2>
        </div>
        <div class="col-6">
            <form  method="post" asp-controller="home" asp-action="Index"  enctype="multipart/form-data">
                <div class="row mt-2" >
                <div class="col-7" >
                    <div class="custom-file">
                         <input asp-for="File" type="file" class="form-control custom-file-input" />
                         <label class="custom-file-label">Choose File</label>
                          <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4" >
                     <button type="submit" class="btn btn-primary form-control"> Parse </button>
                </div>  
                </div>
            </form>
        </div>
    </div>
    <br /> <br />

    <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Payroll Number</th>
                <th>Forenames</th>
                <th>Surname</th>
                <th>Date of Birth</th>
                <th>Telephone</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Address 2</th>
                <th>Postcode</th>
                <th>EMail Home</th>
                <th>Start Date</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts{

     <script src="~/js/homeIndex.js" asp-append-version="true" ></script>
     @if( Model.CountOfInsertedRecords != null && Model.CountOfInsertedRecords > 0  ){
             <script>
                     toastr.success( @Model.CountOfInsertedRecords + " records succesfully inserted")
            </script>
        }
}